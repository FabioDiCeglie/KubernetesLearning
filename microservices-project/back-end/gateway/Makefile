.PHONY: run stop logs build clean test help

# Default target
run:
	@echo "ğŸš€ Starting Gateway Service..."
	@chmod +x run.sh
	@./run.sh

# Stop all services
stop:
	@echo "ğŸ›‘ Stopping all services..."
	@docker-compose down

# View logs
logs:
	@echo "ğŸ“‹ Showing logs..."
	@docker-compose logs -f

# Build images
build:
	@echo "ğŸ”¨ Building images..."
	@docker-compose build

# Clean up everything (containers, images, volumes)
clean:
	@echo "ğŸ§¹ Cleaning up..."
	@docker-compose down -v --rmi all

# Test the API
test:
	@echo "ğŸ§ª Testing API..."
	@sleep 5
	@echo "Testing health endpoint..."
	@HEALTH_CODE=$$(curl -s -o /dev/null -w "%{http_code}" http://localhost:8080/health) && \
	if [ "$$HEALTH_CODE" = "204" ]; then \
		echo "âœ… Health check passed - Gateway is running"; \
		echo "Testing login endpoint..."; \
		LOGIN_CODE=$$(curl -s -o /dev/null -w "%{http_code}" -X POST http://localhost:8080/login -u "test@test.com:test"); \
		if [ "$$LOGIN_CODE" = "200" ]; then \
			echo "âœ… Login test passed - Status: $$LOGIN_CODE"; \
		elif [ "$$LOGIN_CODE" = "401" ]; then \
			echo "âœ… Login endpoint responsive - Auth service may be down (Status: $$LOGIN_CODE)"; \
		else \
			echo "âŒ Login test failed - Status: $$LOGIN_CODE"; \
		fi \
	else \
		echo "âŒ Health check failed - Status: $$HEALTH_CODE"; \
	fi || echo "âŒ Test failed - make sure services are running"

# Restart services
restart: stop run

# Show service status
status:
	@echo "ğŸ“Š Service status:"
	@docker-compose ps

# Show help
help:
	@echo "Available targets:"
	@echo "  run      - Start all services"
	@echo "  stop     - Stop all services"
	@echo "  logs     - Show service logs"
	@echo "  build    - Build Docker images"
	@echo "  clean    - Clean up everything"
	@echo "  test     - Test the API"
	@echo "  restart  - Restart services"
	@echo "  status   - Show service status"
	@echo "  k8s-deploy - Deploy to Kubernetes"
	@echo "  k8s-status - Check Kubernetes deployment status"
	@echo "  k8s-logs   - Show Kubernetes pod logs"
	@echo "  k8s-test   - Test Kubernetes deployment via ingress"
	@echo "  k8s-clean  - Remove from Kubernetes"
	@echo "  help     - Show this help"

# Kubernetes deployment targets
k8s-deploy:
	@echo "ğŸš€ Deploying to Kubernetes..."
	@cd manifests && chmod +x deploy.sh && ./deploy.sh

k8s-status:
	@echo "ğŸ“Š Kubernetes deployment status:"
	@echo "Pods:"
	@kubectl get pods -l app=gateway
	@echo ""
	@echo "Services:"
	@kubectl get svc -l app=gateway
	@echo ""
	@echo "ConfigMaps:"
	@kubectl get configmap gateway-configmap
	@echo ""
	@echo "Secrets:"
	@kubectl get secret gateway-secret

k8s-logs:
	@echo "ğŸ“‹ Showing Kubernetes pod logs..."
	@kubectl logs -l app=gateway --tail=50 -f

k8s-test:
	@echo "ğŸ§ª Testing Kubernetes deployment via ingress..."
	@echo "ğŸ” Checking if ingress is deployed..."
	@if ! kubectl get ingress gateway-ingress >/dev/null 2>&1; then \
		echo "âŒ Ingress not found. Deploy first with 'make k8s-deploy'"; \
		exit 1; \
	fi
	@echo "ğŸ“¡ Testing via mp3converter.com..."
	@echo "ğŸ’¡ Make sure /etc/hosts contains: 127.0.0.1 mp3converter.com"
	@echo "ğŸ’¡ Make sure minikube tunnel is running"
	@sleep 3
	@echo "Testing health endpoint..."
	@HEALTH_CODE=$$(curl -s -o /dev/null -w "%{http_code}" http://mp3converter.com/health) && \
	if [ "$$HEALTH_CODE" = "204" ]; then \
		echo "âœ… Health check passed - Gateway is accessible via ingress"; \
		echo "Testing login endpoint..."; \
		LOGIN_CODE=$$(curl -s -o /dev/null -w "%{http_code}" -X POST http://mp3converter.com/login -u "test@test.com:test"); \
		if [ "$$LOGIN_CODE" = "200" ]; then \
			echo "âœ… Login test passed - Status: $$LOGIN_CODE"; \
			echo "ğŸ‰ Kubernetes ingress test passed!"; \
		elif [ "$$LOGIN_CODE" = "401" ]; then \
			echo "âœ… Login endpoint responsive - Auth service may be down (Status: $$LOGIN_CODE)"; \
			echo "ğŸ‰ Kubernetes ingress test passed!"; \
		else \
			echo "âŒ Login test failed - Status: $$LOGIN_CODE"; \
		fi \
	else \
		echo "âŒ Health check failed - Status: $$HEALTH_CODE"; \
		echo "ğŸ”§ Troubleshooting:"; \
		echo "   - Check if minikube tunnel is running: pgrep -f 'minikube tunnel'"; \
		echo "   - Check ingress status: kubectl get ingress"; \
		echo "   - Check pods: kubectl get pods -l app=gateway"; \
		echo "   - Check /etc/hosts: grep mp3converter.com /etc/hosts"; \
	fi || echo "âŒ Test failed - check connectivity and ingress setup"

k8s-clean:
	@echo "ğŸ§¹ Cleaning up Kubernetes resources..."
	@kubectl delete deployment gateway || true
	@kubectl delete service gateway-service || true
	@kubectl delete configmap gateway-configmap || true
	@kubectl delete secret gateway-secret || true
	@echo "ğŸ§¹ Cleaning up MongoDB Docker container and volume..."
	@docker stop mongodb 2>/dev/null || true
	@docker rm mongodb 2>/dev/null || true
	@docker volume rm mongodb_data 2>/dev/null || true
	@echo "âœ… Kubernetes and MongoDB cleanup complete"

k8s-context:
	@echo "ğŸ” Current Kubernetes context:"
	@kubectl config current-context
	@echo ""
	@echo "Cluster info:"
	@kubectl cluster-info 